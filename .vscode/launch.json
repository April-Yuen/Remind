  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Remind",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "running on port ([0-9]+)",
        "uriFormat": "http://localhost:%s",
      }
    }
  ]
}
